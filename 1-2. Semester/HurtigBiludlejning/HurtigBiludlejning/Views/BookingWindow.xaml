<Page
    x:Class="HurtigBiludlejning.BookingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HurtigBiludlejning"
    xmlns:ViewModels="clr-namespace:HurtigBiludlejning.ViewModels" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BookingWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    

        <Grid>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                        <RowDefinition/>
                </Grid.RowDefinitions>

        <Button
            Name="BtnBack"
            Grid.Row="0"
            Grid.Column="1"
            Content="Back"
            Click="BackBtn_Click"/>
        <ListView
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            ItemsSource="{Binding Bookings, UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Address}" />
                        <TextBlock Text="{Binding Phone}" />
                        <TextBlock Text="{Binding Car}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Image
            Name="ImgLogo"
            Grid.Row="0"
            Grid.Column="4"
            Source="/Images/HurtigBiludlejningLogo.jpg" />
        <Calendar
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="3" />
        <StackPanel
            Grid.Row="3"
            Grid.Column="3"
            Orientation="Vertical">
            <Button Name="BtnCatA" Content="Cat A" />
            <Button Name="BtnCatB" Content="Cat B" />
            <Button Name="BtnCatC" Content="Cat C" />
        </StackPanel>
        <Button
            Name="BtnConfirm"
            Grid.Row="3"
            Grid.Column="4"
            Width="100"
            Height="50"
            Margin="50,100,-50,-50"
            Content="Confirm" />

    </Grid>
</Page>