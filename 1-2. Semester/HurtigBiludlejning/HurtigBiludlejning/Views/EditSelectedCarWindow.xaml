<Page x:Class="HurtigBiludlejning.EditSelectedCarWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HurtigBiludlejning"
      mc:Ignorable="d"
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditSelectedCarWindow">

        <Grid>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Name="BtnBack" Content="Back" BorderBrush="Black" Grid.Row="0" Grid.Column="0"></Button>
                <Button Name="BtnDeleteCar" Content="Delete" BorderBrush="Black" Grid.Row="7" Grid.Column="0"></Button>
                <Button Name="BtnConfirm" Content="Confirm" BorderBrush="Black" Grid.Row="7" Grid.Column="7"></Button>

                <Label Content="Make" Grid.Row="1" Grid.Column="2" Background="White" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></Label>
                <Label Content="Model" Grid.Row="2" Grid.Column="2" Background="White" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></Label>
                <Label Content="Fuel" Grid.Row="3" Grid.Column="2" Background="White" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></Label>
                <Label Content="Mileage" Grid.Row="4" Grid.Column="2" Background="White" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></Label>
                <Label Content="Category" Grid.Row="5" Grid.Column="2" Background="White" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></Label>

                <TextBox Name="TbMake" Text="Make" TextAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" BorderBrush="Black"></TextBox>
                <TextBox Name="TbModel" Text="Model" TextAlignment="Center" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="3" BorderBrush="Black"></TextBox>
                <TextBox Name="TbFuel" Text="Fuel" TextAlignment="Center" VerticalContentAlignment="Center" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="3" BorderBrush="Black"></TextBox>
                <TextBox Name="TbMileage" Text="Mileage" TextAlignment="Center" VerticalContentAlignment="Center" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="3" BorderBrush="Black"></TextBox>
                <TextBox Name="TbCat" Text="Category" TextAlignment="Center" VerticalContentAlignment="Center"  Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="3" BorderBrush="Black"></TextBox>

                <Image Source="/Images/HurtigBiludlejningLogo.jpg" Grid.Row="0" Grid.Column="7"></Image>
        </Grid>
</Page>
