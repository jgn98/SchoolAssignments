<Window x:Class="TusindfrydWPF.CreateFlowerSortDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TusindfrydWPF"
        mc:Ignorable="d"
        Title="CreateFlowerSortDialog" Height="400" Width="400">
    <Grid>
        <Label Content="Navn:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.197,0.175"/>
        <Label Content="Billede (sti):" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.197,0.175"/>
        <Label Content="Produktionstid:" HorizontalAlignment="Left" Margin="10,216,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.197,0.175"/>
        <Label Content="Halveringstid:" HorizontalAlignment="Left" Margin="10,268,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.197,0.175"/>
        <Label Content="Størrelse" HorizontalAlignment="Left" Margin="10,316,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.197,0.175"/>
        <TextBox x:Name="NameText" HorizontalAlignment="Left" Margin="117,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" TextChanged="NameText_TextChanged"/>
        <TextBox x:Name="PictureText" HorizontalAlignment="Left" Margin="117,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247"/>
        <TextBox x:Name="ProductionTimeText" HorizontalAlignment="Left" Margin="117,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247"/>
        <TextBox x:Name="HalfLifeTimeText" HorizontalAlignment="Left" Margin="117,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247"/>
        <TextBox x:Name="SizeText" HorizontalAlignment="Left" Margin="117,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="117,96,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="252,354,0,0" VerticalAlignment="Top" Width="48"/>
        <Button Content="Fortryd" HorizontalAlignment="Left" Margin="315,354,0,0" VerticalAlignment="Top" Width="49"/>


    </Grid>
</Window>
