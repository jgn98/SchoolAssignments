<Window x:Class="WPFSimpleGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSimpleGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="72*"/>
            <ColumnDefinition Width="344*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TB2" Grid.Column="2" HorizontalAlignment="Left" Margin="0,100,0,0" TextWrapping="Wrap" Text="Line 2" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TB1" Grid.Column="2" HorizontalAlignment="Left" Margin="0,50,0,0" TextWrapping="Wrap" Text="Line 1" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TB3" Grid.Column="2" HorizontalAlignment="Left" Margin="0,150,0,0" TextWrapping="Wrap" Text="Line 3" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TB4" Grid.Column="2" HorizontalAlignment="Left" Margin="0,200,0,0" TextWrapping="Wrap" Text="Line 4" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Clear" Grid.Column="2" Content="Clear" HorizontalAlignment="Left" Margin="210,122,0,0" VerticalAlignment="Top" Click="Button_Clear" RenderTransformOrigin="5.153,-3.007" Width="80" Height="20"/>
        <Button x:Name="Scroll_Down" Grid.Column="2" Content="Scroll Down" HorizontalAlignment="Left" Margin="210,175,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.198,-0.032" Click="Button_SD" Width="80" Height="20"/>
        <Button x:Name="Scroll_Up" Grid.Column="2" Content="Scroll Up" HorizontalAlignment="Left" Margin="210,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.302,0.663" Click="Button_SU" Width="80" Height="20"/>
        <Label Grid.Column="1" Content="1" HorizontalAlignment="Left" Margin="0,46,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.583,0.21"/>
        <Label Grid.Column="1" Content="2" HorizontalAlignment="Left" Margin="0,96,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.583,0.21"/>
        <Label Grid.Column="1" Content="3" HorizontalAlignment="Left" Margin="0,146,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.583,0.21"/>
        <Label Grid.Column="1" Content="4" HorizontalAlignment="Left" Margin="0,196,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.583,0.21"/>

    </Grid>
</Window>
