@model Movie

<div class="form-group">
    <label asp-for="Title"></label>
    <input asp-for="Title" class="form-control" placeholder="Movie Title">
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ReleaseYear"></label>
    <input asp-for="ReleaseYear" type="number" class="form-control" placeholder="1234">
    <span asp-validation-for="ReleaseYear" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="DurationInMinutes"></label>
    <input asp-for="DurationInMinutes" type="number" class="form-control" placeholder="123">
    <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control" rows="3" placeholder="This movie is about..."></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Rating"></label>
    <input asp-for="Rating" type="number" class="form-control" placeholder="5">
    <span asp-validation-for="Rating" class="text-danger"></span>
</div>