@rendermode InteractiveServer
@page "/"
<PageTitle>Home</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center mb-5">
        <div class="col-md-6 text-center">
            <h1>Text Counter</h1>
            <DescriptionInput Description="@description"
                              DescriptionChanged="@OnDescriptionChanged" />
            <p class="mt-3">Character count: @characterCount</p>
        </div>
    </div>

    <hr class="my-5" />

    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h2>Cascading Color</h2>
            <ColorPicker @bind-Color="selectedColor" />
            <div class="mt-4">
                <CascadingValue Value="selectedColor">
                    <ChildA />
                </CascadingValue>
            </div>
        </div>
    </div>
</div>

@code {
    private string description = string.Empty;
    private int characterCount = 0;
    private string selectedColor = "#000000";

    private void OnDescriptionChanged(string value)
    {
        description = value;
        characterCount = value?.Length ?? 0;
    }
}