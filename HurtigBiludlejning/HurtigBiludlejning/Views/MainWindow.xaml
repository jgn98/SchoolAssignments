<Window
    x:Class="HurtigBiludlejning.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HurtigBiludlejning"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden">
            <Frame.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Button
                        x:Name="Reservations"
                        Grid.Row="5"
                        Grid.Column="1"
                        BorderBrush="Black"
                        Click="Reservations_Click"
                        Content="Reservations" />
                    <Button
                        x:Name="ReturnCar"
                        Grid.Row="5"
                        Grid.Column="3"
                        BorderBrush="Black"
                        Click="ReturnCar_Click"
                        Content="Return Car" />
                    <Button
                        x:Name="CarPoolManagement"
                        Grid.Row="5"
                        Grid.Column="5"
                        BorderBrush="Black"
                        Click="CarPoolManagement_Click"
                        Content="Car Pool Management" />

                    <Image
                        Grid.Row="1"
                        Grid.RowSpan="3"
                        Grid.Column="2"
                        Grid.ColumnSpan="3"
                        Source="/Images/HurtigBiludlejningLogo.jpg" />
                </Grid>
            </Frame.Content>
        </Frame>
    </Grid>
</Window>
