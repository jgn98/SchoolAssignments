<Page
    x:Class="HurtigBiludlejning.CarPoolStatusWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HurtigBiludlejning"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CarPoolStatusWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Width="100"
            Height="92"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BackBtn_Click"
            Content="Back" />
        <ListView
            Grid.Row="2"
            Grid.ColumnSpan="4"
            Width="600"
            HorizontalAlignment="Center"
            ItemsSource="{Binding Cars, UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ID: " />
                        <TextBlock Text="{Binding Id}" />
                        <TextBlock Text="Model: " />
                        <TextBlock Text="{Binding Model}" />
                        <TextBlock Text="Fuel Type: " />
                        <TextBlock Text="{Binding Fuel}" />
                        <TextBlock Text="Status: " />
                        <TextBlock Text="{Binding Status}" />
                        <TextBlock Text="License Plate: " />
                        <TextBlock Text="{Binding Plate}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button
            Margin="10"
            Grid.Row="3"
            Grid.Column="2"
            Width="107"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Select Status" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            Width="107"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Status Count" />
        <Button
            Margin="0,0,0,10"
            Grid.Row="3"
            Grid.Column="2"
            Width="107"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Content="Edit Selected Car" />
        <Button
            Width="100"
            Height="92"
                Grid.Row="3"
                Grid.Column="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Content="Confirm" />
        <Image Grid.Row="1"
               Grid.Column="3"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Width="100"
            Source="\Images\HurtigBiludlejningLogo.jpg" />
    </Grid>



</Page>
