<Page
    x:Class="HurtigBiludlejning.CustomerInfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HurtigBiludlejning"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CustomerInfoWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <Image
            Grid.Row="1"
            Grid.Column="3"
            Width="100"
            Height="100"
            Margin="117,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="\Images\HurtigBiludlejningLogo.jpg" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="100"
            Height="30"
            Margin="124,130,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Name: "
            FontWeight="Bold" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="100"
            Height="30"
            Margin="124,185,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Address: "
            FontWeight="Bold" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="100"
            Height="30"
            Margin="124,240,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="E-mail: "
            FontWeight="Bold" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="100"
            Height="30"
            Margin="124,295,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Phone: "
            FontWeight="Bold" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Height="30"
            Margin="124,6,10,0"
            VerticalAlignment="Top"
            Content="License No. "
            FontWeight="Bold" />
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Width="292"
            Height="30"
            Margin="0,130,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Width="292"
            Height="30"
            Margin="0,185,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Width="292"
            Height="30"
            Margin="0,240,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Width="292"
            Height="30"
            Margin="0,295,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <TextBox
            Grid.Row="2"
            Grid.Column="2"
            Width="292"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" Margin="0,6,0,0" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Width="87"
            Height="50"
            Margin="30,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Back"
            RenderTransformOrigin="-8.328,-1.754" />
        <Button
            Grid.Row="2"
            Grid.Column="3"
            Height="50"
            Width="100"  
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Confirm"/>

    </Grid>
</Page>
